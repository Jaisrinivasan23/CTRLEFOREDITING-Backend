# Database
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/your-database?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Server
PORT=10000
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Google Drive API
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-render-app.onrender.com/auth/google/callback
GOOGLE_REFRESH_TOKEN=your-google-refresh-token
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# File Upload
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=mp4,mov,avi,mkv,wmv,flv,webm

# Admin Credentials (Default)
ADMIN_EMAIL=admin@ctrle.com
ADMIN_PASSWORD=your-admin-password

# Keep-Alive Service
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
